<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:text="Intent String "
        android:id="@+id/buttonString"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/buttonString"
        android:text="Intent Integer "
        android:id="@+id/buttonInteger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/buttonInteger"
        android:text="Intent Array "
        android:id="@+id/buttonArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>